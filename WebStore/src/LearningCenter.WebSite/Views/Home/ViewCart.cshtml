@model IEnumerable<LearningCenter.WebSite.Models.CartItem>

@{
    ViewBag.Title = "Enroll";
}

<h2>Enroll in a class</h2>

@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Remove", "Remove", "Home", new { classId = item.Id }, null)
        </td>
        <td>
            @Html.ActionLink("Enroll", "Enroll", "Home", new { classId = item.Id }, null)
        </td>
    </tr>
    }
</table>
}
else
{
    if (Session["User"] != null)
    {
    <div>
        You do not currently have any classes selected. @Html.ActionLink("Click here to browse our options.", "OurClasses")
    </div>
    }
    else
    {
        <div>
            You are not logged in. Please @Html.ActionLink("click here", "Login") to log in.
        </div>
    }
}
